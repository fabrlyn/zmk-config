#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT   0
#define BLUETOOTH 1
#define SYMBOLS   2
#define NUMBERS   3

/ {
  combos {
    compatible = "zmk,combos";
    media_keymap {
      timeout-ms = <50>;
      key-positions = <0 36>;
      bindings = <&mo BLUETOOTH>;
    };
  };
  keymap {
    compatible = "zmk,keymap";
    default {
      bindings =
        <
//      ---------------------------------------------------------------------------------------------------
//
        &kp TAB   &kp Q &kp W &kp E    &kp R          &kp T &kp Y   &kp U &kp I   &kp O &kp P &kp BSPC
//
//      ---------------------------------------------------------------------------------------------------
//
        &kp ESC   &kp A &kp S &kp D    &kp F          &kp G &kp H   &kp J &kp K   &kp L &none &kp RET
//
//      ---------------------------------------------------------------------------------------------------
//
        &kp LSHFT &kp Z &kp X &kp C    &kp V          &kp B &kp N   &kp M &none   &none  &none &none
//
//      ---------------------------------------------------------------------------------------------------
//
                              &mo NUMBERS &kp SPACE &mo SYMBOLS    &none &none &kp LCTRL
//
//      ---------------------------------------------------------------------------------------------------

        >;
    };
    bluetooth {
      bindings =
        <
//      --------------------------------------------------------------------------------------------------------
//
        &none &none &none &none &none &none        &none         &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &none &none
//
//      -----------------------------------------------------------------------------------------------------------
//
        &none &none &none &none &none &none        &bt BT_PRV    &bt BT_SEL 3 &bt BT_SEL 4 &bt BT_NXT   &none &none
//
//      -----------------------------------------------------------------------------------------------------------
//
        &none &none &none &none &none &none        &none         &none        &none        &none        &none &none
//
//      -----------------------------------------------------------------------------------------------------------
//
                          &none &none &none        &kp C_AL_LOCK &bt BT_CLR   &none
//
//      --------------------------------------------------------------------------------------------------------

        >;
    };
    symbols {
      bindings =
        <
//      --------------------------------------------------------------------------------------------------------
//
        &none &none &none &none &none &none        &kp LPAR &kp RPAR &kp LBRC &kp RBRC &kp LBKT &kp RBKT
//
//      -----------------------------------------------------------------------------------------------------------
//
        &none &none &none &none &none &none        &kp SQT &kp DQT &kp EXCL &kp EQUAL &kp COLON &kp SEMICOLON
//
//      -----------------------------------------------------------------------------------------------------------
//
        &none &none &none &none &none &none        &kp LT &kp GT &kp COMMA &kp DOT &kp QMARK &kp GRAVE
//
//      -----------------------------------------------------------------------------------------------------------
//
                          &none &none &none        &kp BSLH &kp PIPE &kp FSLH
//
//      --------------------------------------------------------------------------------------------------------

        >;
    };
    numbers {
      bindings =
        <
//      --------------------------------------------------------------------------------------------------------
//
        &none &none &none &none &none &none        &none &kp NUMBER_1 &kp NUMBER_2 &kp NUMBER_3 &none &none
//
//      -----------------------------------------------------------------------------------------------------------
//
        &none &none &none &none &none &none        &none &kp NUMBER_4 &kp NUMBER_5 &kp NUMBER_6 &none &none
//
//      -----------------------------------------------------------------------------------------------------------
//
        &none &none &none &none &none &none        &none &kp NUMBER_7 &kp NUMBER_8 &kp NUMBER_9 &none &none
//
//      -----------------------------------------------------------------------------------------------------------
//
                          &none &none &none        &none &kp NUMBER_0 &none
//
//      --------------------------------------------------------------------------------------------------------

        >;
    };
  };
};

